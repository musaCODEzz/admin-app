<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-aFq/bzH65dt+w6FI2ooMVUpc+21e0SRygnTpmBvdBgSdnuTN7QbdgL+OapgHtvPp" crossorigin="anonymous">
    <title>MPESA TRANSACTION DATA</title>
</head>
<body>
    <h1>Daraja API Mpesa Transactions</h1>
    <form>
        <table class="table ">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Number</th>
                    <th scope="col">Amount</th>
                    <th scope="col">Transaction ID</th>
                    <th scope="col">Timestamp</th>
                </tr>

            </thead>
            <tbody>
                <tr>
                    <th scope="row"> 
                    
                        <!-- creating id starting from 1 dynamically to the number of transactions -->
                        <% for(let i=1; i<=paymentList.length; i++){ %>
                            <p><%= i %></p>
                        <% } %>

                    </th>
                    
                    
                    <td><% paymentList.forEach(payment => {%>
                        <p><%= payment.number.slice(0, 4) + "****" + payment.number.slice(8, 12) %></p>
                        <%})%></td>

                    <!-- <td><% paymentList.forEach(payment => {%>
                        <p><%= payment.number %></p>
                        <%})%></td> -->
                    <td><% paymentList.forEach(payment => {%>
                        <p><%= payment.amount %></p>
                        <%})%></td>
                    <td><% paymentList.forEach(payment => {%>
                        <p><%= payment.trnx_id %></p>
                        <%})%></td>
                    <td><% paymentList.forEach(payment => {%>
                        <p><%= payment.timestamp %></p>
                        <%})%></td>
                </tr>
            </tbody>
        </table>
    </form>
    
        
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/js/bootstrap.bundle.min.js" integrity="sha384-qKXV1j0HvMUeCBQ+QVp7JcfGl760yU08IQ+GpUo5hlbpg51QRiuqHAJz8+BrxE/N" crossorigin="anonymous"></script>
</body>
</html>